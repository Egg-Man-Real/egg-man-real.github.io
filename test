<script>
var int;
var mult;
var currentCost;
var idle;
int=0;
mult=0;
currentCost=1;
idle=0;
document.getElementById("Count").innerHTML = int;
document.getElementById("currentCost").innerHTML = "Current Cost Is " + (5*currentCost)+".";
function idleLevel() {
idle+=1;
}
function basicClicker() {
int+=1 + mult;
document.getElementById("Count").innerHTML = int;
}
function upgrade() {
if (int>=5*currentCost) {
mult+=1;
int = int-(5*currentCost);
currentCost = currentCost*2;
document.getElementById("Count").innerHTML = int;
}
document.getElementById("currentCost").innerHTML = "Current cost is " + (5*currentCost)+".";
}

</script>

